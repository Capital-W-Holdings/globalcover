# GlobalCover Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/globalcover

# ===========================================
# REDIS (for rate limiting)
# ===========================================
# Upstash Redis URL (production) or local Redis
REDIS_URL=redis://localhost:6379
# Or for Upstash:
# UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=xxx

# ===========================================
# STRIPE (Payments)
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe webhook secret (from webhook endpoint settings)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_PRICE_MONTHLY=price_xxx
STRIPE_PRICE_ANNUAL=price_xxx

# ===========================================
# SENDGRID (Email)
# ===========================================
# Get this from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxx

# Email configuration
EMAIL_FROM=noreply@globalcover.com
EMAIL_FROM_NAME=GlobalCover
ADMIN_EMAIL=admin@globalcover.com

# ===========================================
# SEGMENT (Analytics)
# ===========================================
# Get this from https://app.segment.com
SEGMENT_WRITE_KEY=xxx

# Optional: Google Analytics
GA_TRACKING_ID=G-xxx

# ===========================================
# ADMIN API
# ===========================================
# Generate a secure random string (32+ characters)
# Use: openssl rand -base64 32
ADMIN_API_KEY=your-secure-admin-key-here

# ===========================================
# APPLICATION
# ===========================================
# Base URL for the application
NEXT_PUBLIC_BASE_URL=https://globalcover.com

# Node environment
NODE_ENV=production

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1
